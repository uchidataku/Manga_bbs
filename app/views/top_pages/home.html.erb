<main class="row">
	<article class="col-md-8 d-flex flex-column">
	  <% @posts.each do |thread| %>
    	<div class="row no-gutters thread-box">
      	<div class="col-md-8 d-flex flex-column">
  				<div><h3 class="thread-title"><%= link_to thread.title, post_path(thread.id) %></h3></div>
          <div><h5 class="m-3 p-3 thread-text"><%= thread.text %></h5></div>
          <div class="d-flex flex-row justify-content-start">
            <% thread.categories.each_with_index do |genre| %>
              <p class="badge badge-info m-1 p-1 genre"><%= genre.name %></p>
            <% end %>
          </div>
          <p class="m-2 p-2"><%= thread.user.username %></p>
          <p class="m-2 p-2"><%= time_ago_in_words(thread.created_at) %></p>
        </div>
        <div class="col-md-4">
          <svg><%= thread.picture %></svg>
        </div>
      </div>
    <% end %>
    <%= will_paginate @posts, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
	</article>
	<aside class="col-md-4">
	  <%= render "layouts/sidebar" %>
	</aside>
</main>
