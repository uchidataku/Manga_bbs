<% provide(:title, "新規登録") %>
<main class="row">
	<article class="col-md-8 d-flex flex-column">
	  <div class="registration-box">
      <div class="article_title text-center">
        <h2>新規登録</h2>
      </div>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row justify-content-around article_text">
          <div class="col-6 d-flex flex-column justify-content-center">
            <div class="m-3 text-center"><%= f.label :username, "ユーザーネーム" %></div>
            <div class="m-3 text-center"><%= f.label :email, "メールアドレス" %></div>
            <div class="m-3 text-center"><%= f.label :password, "パスワード" %></div>
            <div class="m-3 text-center"><%= f.label :password_confirmation, "パスワード（再入力）" %></div>
            <div class="m-3 text-center"><%= f.label :sex, "性別" %></div>
          </div>
          <div class="col-6 d-flex flex-column justify-content-center">
            <div class="m-3"><%= f.text_field :username, autofocus: true %></div>
            <div class="m-3"><%= f.email_field :email, autocomplete: "email" %></div>
            <div class="m-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
            <div class="m-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
            <div class="m-3"><%= f.select :sex, [["男","男"],["女","女"]] %></div>
          </div>
          <div class="col d-flex justify-content-center">
            <div class="m-4"><%= f.submit "新規登録" %></div>
          </div>
        </div>
      <% end %>
    </div>
	</article>
	<aside class="col-md-4">
	  <%= render "layouts/sidebar" %>
	</aside>
</main>
